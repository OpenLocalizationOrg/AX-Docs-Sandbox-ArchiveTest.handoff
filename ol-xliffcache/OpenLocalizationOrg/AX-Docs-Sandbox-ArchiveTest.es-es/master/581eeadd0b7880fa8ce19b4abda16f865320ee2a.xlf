        <trans-unit id="102" translate="yes" xml:space="preserve" extradata="MT" restype="x-metadata">
          <source>Legal entities in Spain can post special entries as opening entries for the current period, while adapting accounts to changes in accounting rules.</source>
        </trans-unit>
        <trans-unit id="103" translate="yes" xml:space="preserve">
